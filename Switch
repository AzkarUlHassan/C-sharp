using System;
namespace ConsoleApp21
{
    internal class Program
    {
        static void Main()
        {
           
            int a;
            Console.WriteLine("Please Enter first number");
            a = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Please Enter second number");
            int b;
            b = Convert.ToInt32(Console.ReadLine());
            int condition;
            int result = a + b;
            int result2 = a / b;
            Console.WriteLine("Plesae Enter your Choice\nFor ADDITION\t        1\nFor MULTIPLICATION\t2\nFor DIVISION\t\t3");
            condition = Convert.ToInt32(Console.ReadLine());
            switch (condition)
            {
                case 1:
                    Console.WriteLine("Sum is "+ result.ToString());
                    break;
                    case 2:
                        Console.WriteLine("Answer is "+ a * b);
                    break;
                case 3:
                    Console.WriteLine("Answer is "+  result2.ToString() );
                    break;
                default:
                    break;
            }
            Console.ReadLine();

        }
    }
}
